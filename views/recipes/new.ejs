<%- include('../partials/header') %>
<!-- The repetitive <br>'s and <hr>'s are temporary for spacing. Will fix later -->

<div class="new-recipe-panels">
    <section id="new-recipe"> 
        <div class="content-container">
            <br><br>
            <h1 class="new-edit-recipe-title all-recipes-title"><%= title %></h1>
            <form 
                id="new-recipe-form" 
                class="flex-cntr-col"
                action="/recipes" 
                enctype="multipart/form-data" 
                method="POST"
            >
                <div class="input-container">
                    <input 
                    type="text"
                    maxlength="46"
                    id="name"
                    name="name"
                    autocomplete="off"
                    placeholder=" "
                    class="form-input"
                    required
                >
                    <label class="input-label" for="name">Recipe Name</label>
                </div>
                <hr><hr><hr><hr><hr><hr>
                <div class="input-container">
                    <textarea 
                    type="text"
                    id="ingredients"
                    name="ingredients"
                    autocomplete="off"
                    placeholder=" "
                    class="form-text-area"
                    cols="81" rows="17"
                    required
                ></textarea>
                    <label class="input-label" for="ingredients">Ingredients</label>
                </div>
                <br><br><br><br><br><br><br><br><br><br><br><br><br><br><hr><hr><hr><hr><hr><hr>
                <div class="input-container">
                    <textarea 
                    type="text"
                    id="directions"
                    name="directions"
                    autocomplete="off"
                    placeholder=" "
                    class="form-text-area"
                    cols="81" rows="17"
                    required
                ></textarea>
                    <label class="input-label" for="directions">Directions</label>
                </div>
                <br><br><br><br><br><br><br><br><br><br><br><br><br><br><hr><hr><hr><hr><hr><hr>
                <div class="input-container">
                    <input 
                    type="number"
                    id="prep-time"
                    name="prepTime"
                    autocomplete="off"
                    placeholder="(in minutes)"
                    class="form-input hide-arrow"
                    required
                >
                    <label class="input-label" for="prep-time">Prep Time</label>
                </div>
                <hr><hr><hr><hr><hr><hr>
                <div class="input-container">
                    <input 
                    type="number"
                    id="cook-time"
                    name="cookTime"
                    autocomplete="off"
                    placeholder="(in minutes)"
                    class="form-input hide-arrow"
                    required
                >
                    <label class="input-label" for="cook-time">Cook Time</label>
                </div>
                <br><br>
                <label class="file-upload">
                    Image:
                    <input id="upload" class="file-upload" type="file" required name="picture">
                </label>
                <button 
                    type="submit" 
                    form="new-recipe-form" 
                    id="new-recipe-btn"
                    class="add-btn"
                >Add Recipe
                </button>
            </form>
        </div>
    </section>
</div>


<%- include('../partials/footer') %>