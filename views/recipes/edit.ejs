<%- include('../partials/header') %>

<section id="edit-recipe">
    <form 
        class="flex-cntr-col" 
        id="edit-recipe-form" 
        action="/recipes/<%= recipe._id %>?_method=PUT" 
        enctype="multipart/form-data" 
        method="POST"
        >
        <label>Recipe Name:
            <input type="text" required name="name" value="<%= recipe.name %>">
        </label>
        <label>Ingredients:
            <input type="text" required name="ingredients" value="<%= recipe.ingredients %>">
        </label>
        <label>Directions:
            <input type="text" required name="directions" value="<%= recipe.directions %>">
        </label>
        <label>Prep Time:
            <input type="number" required name="prepTime" value="<%= recipe.prepTime %>">
        </label>
        <label>Cook Time:
            <input type="number" required name="cookTime" value="<%= recipe.cookTime %>">
        </label>
        <label>Image:
            <input type="file" required name="picture" value="<%= recipe.picture %>">
        </label>
    </form>
</section>
<button 
    type="submit" 
    form="edit-recipe-form" 
    id="edit-recipe-btn"
    >Edit Recipe
</button>

<%- include('../partials/footer') %>